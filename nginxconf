server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;
    server_name ondecentral.com  www.ondecentral.com;
    return 301 https://ondecentral.com$request_uri;
}


server {
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl on;
    server_name ondecentral.com  www.ondecentral.com;
    ssl_certificate /etc/nginx/ssl/lqmssl/www.ondecentral.com.app.chain.crt;
    ssl_certificate_key /etc/nginx/ssl/lqmssl/ondecentral.com.app.key;

    client_max_body_size 4G;

    access_log /opt/venv/logs/nginx-access.log;
    error_log /opt/venv/logs/nginx-error.log;

    location /static/ {
        alias   /opt/venv/ondecentral/public/;
    }

    location /media/ {
        alias   /opt/venv/ondecentral/public/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }

    # Error pages
    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /opt/venv/ondecentral/public/;
    }
}
